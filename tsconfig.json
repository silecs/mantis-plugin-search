{
  "compilerOptions": {
    "outDir": "./files",
    "target": "es2015",
    "lib": [
        "dom",
        "dom.iterable",
        "es2018"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "es6",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": ["./src/**/*.ts"]
}

